<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OZ Wellness Club</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="bi bi-activity"></i>
                    </div>
                    <span>OZ<span style="color:var(--accent-color);">WELLNESS</span></span>
                </a>

                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Uye"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Randevu" asp-action="Index">Randevularım</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="YapayZeka" asp-action="OneriAl"><i class="bi bi-stars text-warning"></i> AI Koç</a></li>
                            }
                            
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown ms-lg-2">
                                    <a class="btn btn-outline-dark btn-sm dropdown-toggle rounded-pill px-3 border-0 bg-light" href="#" data-bs-toggle="dropdown">
                                        <i class="bi bi-shield-lock-fill me-1"></i> Yönetim
                                    </a>
                                    <ul class="dropdown-menu shadow-lg border-0 mt-2 rounded-4 p-2">
                                        <li><a class="dropdown-item rounded-2" asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a></li>
                                        <li><a class="dropdown-item rounded-2" asp-controller="Admin" asp-action="Randevular"><i class="bi bi-list-task me-2"></i> Talepler</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item rounded-2" asp-controller="Antrenor" asp-action="Index">Antrenörler</a></li>
                                        <li><a class="dropdown-item rounded-2" asp-controller="Hizmet" asp-action="Index">Hizmetler</a></li>
                                        <li><a class="dropdown-item rounded-2" asp-controller="Salon" asp-action="Index">Şubeler</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    
                    <div class="ms-lg-3 d-flex align-items-center">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="py-5">
        <div class="container">
            <div class="row g-4 justify-content-between">
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3 text-dark">OZ WELLNESS</h5>
                    <p class="small text-muted mb-4">Sağlıklı yaşam yolculuğunuzda size rehberlik eden, teknoloji destekli yeni nesil spor kulübü.</p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-muted fs-5"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-muted fs-5"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="text-muted fs-5"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
                <div class="col-md-2">
                    <h6 class="fw-bold mb-3 text-dark">Hızlı Erişim</h6>
                    <ul class="list-unstyled small text-muted d-flex flex-column gap-2">
                        <li><a href="#" class="text-decoration-none text-muted hover-accent">Hakkımızda</a></li>
                        <li><a href="#" class="text-decoration-none text-muted hover-accent">Eğitmenler</a></li>
                        <li><a href="#" class="text-decoration-none text-muted hover-accent">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3 text-dark">İletişim</h6>
                    <ul class="list-unstyled small text-muted d-flex flex-column gap-2">
                        <li><i class="bi bi-geo-alt me-2 text-primary"></i> Sakarya Üniversitesi, Serdivan</li>
                        <li><i class="bi bi-envelope me-2 text-primary"></i> info@ozwellness.com</li>
                        <li><i class="bi bi-telephone me-2 text-primary"></i> +90 555 123 45 67</li>
                    </ul>
                </div>
            </div>
            <div class="border-top mt-5 pt-4 text-center small text-muted">
                &copy; @DateTime.Now.Year OZ Spor Salonu. Tüm hakları saklıdır.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
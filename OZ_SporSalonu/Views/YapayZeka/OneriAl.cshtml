@model OZ_SporSalonu.ViewModels.YapayZekaOneriViewModel

@{
    ViewData["Title"] = "Yapay Zekâ Egzersiz Önerisi";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

<style>
    /* --- Vücut Tipi Seçim Kartları İçin Özel CSS --- */
    .body-type-option {
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid #e9ecef;
    }
    
    /* Radio butonu gizle, biz kartı kullanacağız */
    .btn-check:checked + .body-type-option {
        border-color: #0d6efd; /* Seçilince Mavi Kenarlık */
        background-color: #f0f8ff;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(13, 110, 253, 0.2);
    }

    .body-type-option:hover {
        border-color: #adb5bd;
    }

    .body-icon {
        font-size: 2.5rem;
        color: #6c757d;
        margin-bottom: 10px;
    }

    .btn-check:checked + .body-type-option .body-icon {
        color: #0d6efd;
    }
    
    .ai-content {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.7;
    }
    
    .ai-content h1, .ai-content h2, .ai-content h3 {
        color: #198754;
        margin-top: 1.5rem;
        margin-bottom: 1rem;
        font-weight: 700;
        border-bottom: 2px solid #e9ecef;
        padding-bottom: 0.5rem;
    }
    
    .ai-content strong {
        color: #0d6efd;
        font-weight: 700;
    }
    
    .ai-content ul {
        padding-left: 1.2rem;
        list-style-type: none; 
    }
    .ai-content ul li {
        margin-bottom: 0.5rem;
        position: relative;
        padding-left: 1.5rem;
    }
    
    .ai-content ul li::before {
        content: "✓"; 
        color: #198754;
        font-weight: bold;
        position: absolute;
        left: 0;
    }
</style>

<div class="container mt-4">
    <div class="text-center mb-5 animate__animated animate__fadeInDown">
        <h2 class="display-6 fw-bold text-primary"><i class="bi bi-robot"></i> AI Fitness Koçu</h2>
        <p class="text-muted lead">Vücut tipini analiz edelim ve sana en uygun rotayı çizelim.</p>
    </div>

    <div class="row justify-content-center">
        
        @* --- SOL TARAFI: FORM --- *@
        <div class="col-lg-6 mb-4">
            <div class="card shadow-lg border-0 h-100 animate__animated animate__fadeInLeft">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0"><i class="bi bi-sliders"></i> Fiziksel Analiz</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="OneriAl" method="post" id="aiForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <label asp-for="Kilo" class="form-label fw-bold small text-muted">KİLO (KG)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-speedometer2 text-primary"></i></span>
                                    <input asp-for="Kilo" class="form-control bg-light border-start-0 ps-0" type="number" placeholder="70" />
                                </div>
                                <span asp-validation-for="Kilo" class="text-danger small"></span>
                            </div>

                            <div class="col-6">
                                <label asp-for="Boy" class="form-label fw-bold small text-muted">BOY (CM)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-rulers text-primary"></i></span>
                                    <input asp-for="Boy" class="form-control bg-light border-start-0 ps-0" type="number" placeholder="175" />
                                </div>
                                <span asp-validation-for="Boy" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-muted d-block mb-2">VÜCUT TİPİNİZ</label>
                            
                            <div class="row g-2">
                                <div class="col-4">
                                    <input type="radio" class="btn-check" name="VucutTipi" id="type1" value="Ektomorf" @(Model?.VucutTipi == "Ektomorf" ? "checked" : "") required>
                                    <label class="card body-type-option h-100 text-center py-3" for="type1">
                                        <div class="body-icon"><i class="bi bi-person"></i></div>
                                        <div class="fw-bold small">Ektomorf</div>
                                        <div class="text-muted x-small" style="font-size:10px;">İnce & Zor Kilo Alan</div>
                                    </label>
                                </div>

                                <div class="col-4">
                                    <input type="radio" class="btn-check" name="VucutTipi" id="type2" value="Mezomorf" @(Model?.VucutTipi == "Mezomorf" ? "checked" : "")>
                                    <label class="card body-type-option h-100 text-center py-3" for="type2">
                                        <div class="body-icon"><i class="bi bi-person-standing"></i></div>
                                        <div class="fw-bold small">Mezomorf</div>
                                        <div class="text-muted x-small" style="font-size:10px;">Atletik & Kaslı</div>
                                    </label>
                                </div>

                                <div class="col-4">
                                    <input type="radio" class="btn-check" name="VucutTipi" id="type3" value="Endomorf" @(Model?.VucutTipi == "Endomorf" ? "checked" : "")>
                                    <label class="card body-type-option h-100 text-center py-3" for="type3">
                                        <div class="body-icon"><i class="bi bi-person-bounding-box"></i></div>
                                        <div class="fw-bold small">Endomorf</div>
                                        <div class="text-muted x-small" style="font-size:10px;">Geniş & Çabuk Yağlanan</div>
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for="VucutTipi" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Hedef" class="form-label fw-bold small text-muted">HEDEFİNİZ</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 pt-2 align-items-start"><i class="bi bi-bullseye text-danger"></i></span>
                                <textarea asp-for="Hedef" class="form-control bg-light border-start-0 ps-0" rows="3" placeholder="Örn: Göbek yağlarını eritip omuzları genişletmek istiyorum..."></textarea>
                            </div>
                            <span asp-validation-for="Hedef" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm" id="btnSubmit">
                                <i class="bi bi-stars me-2"></i> Yapay Zekaya Sor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @* --- SAĞ TARAFI: SONUÇ --- *@
        <div class="col-lg-6">
            
            @* Yükleniyor Animasyonu *@
            <div id="loadingSpinner" class="text-center d-none mt-5">
                <div class="spinner-grow text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <h5 class="mt-4 text-dark fw-bold animate__animated animate__pulse animate__infinite">Veriler Analiz Ediliyor...</h5>
                <p class="text-muted small">Gemini, vücut tipinize en uygun rotayı hesaplıyor.</p>
            </div>

            @* Sonuç Kartı *@
            @if (!string.IsNullOrEmpty(Model.OneriMetni))
            {
                <div class="card shadow-lg border-0 border-top border-4 border-success animate__animated animate__fadeInRight">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success text-white rounded-circle p-3 me-3 shadow-sm">
                                <i class="bi bi-clipboard2-pulse-fill fs-4"></i>
                            </div>
                            <div>
                                <h4 class="mb-0 fw-bold text-success">Size Özel Plan Hazır!</h4>
                                <span class="badge bg-light text-dark border mt-1">
                                    <i class="bi bi-person me-1"></i> @Model.VucutTipi
                                </span>
                            </div>
                        </div>
                        
                        <hr class="my-4 opacity-25" />
                        
                        <div id="formattedContent" class="ai-content text-dark"></div>
                    </div>
                </div>
            }
            else if (ViewContext.ModelState.IsValid)
            {
                @* Boş Durum (Placeholder) *@
                <div class="card border-0 bg-light bg-opacity-50 text-center py-5 rounded-4 h-100 d-flex align-items-center justify-content-center" id="welcomeCard">
                    <div class="card-body">
                        <div class="mb-4">
                            <i class="bi bi-cpu display-1 text-primary opacity-25"></i>
                        </div>
                        <h4 class="text-dark fw-bold">Sonuçlar Burada Görünecek</h4>
                        <p class="text-muted px-4">Sol taraftaki formu doldurun, yapay zeka metabolizmanıza ve hedeflerinize uygun en iyi stratejiyi belirlesin.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Markdown Dönüştürme
            var rawAiText = @Html.Raw(Json.Serialize(Model.OneriMetni));
            var targetDiv = document.getElementById("formattedContent");

            if (rawAiText && targetDiv) {
                try {
                    marked.use({ breaks: true, gfm: true });
                    targetDiv.innerHTML = marked.parse(rawAiText);
                } catch (e) {
                    targetDiv.innerText = rawAiText; 
                }
            }
        });

        // Buton Animasyonu ve Spinner
        document.getElementById("aiForm").addEventListener("submit", function() {
            if ($(this).valid()) {
                var btn = document.getElementById("btnSubmit");
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Analiz Ediliyor...';
                
                var welcome = document.getElementById("welcomeCard");
                if(welcome) welcome.style.display = 'none';
                
                document.getElementById("loadingSpinner").classList.remove("d-none");
            }
        });
    </script>
}
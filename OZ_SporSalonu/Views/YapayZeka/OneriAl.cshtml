@model OZ_SporSalonu.ViewModels.YapayZekaOneriViewModel

@{
    ViewData["Title"] = "Yapay Zekâ Egzersiz Önerisi";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

<div class="container mt-4">
    <div class="text-center mb-5">
        <h2 class="display-6 fw-bold text-primary"><i class="bi bi-robot"></i> AI Fitness Koçu</h2>
        <p class="text-muted lead">Vücut analizine göre sana özel, nokta atışı tavsiyeler.</p>
    </div>

    <div class="row justify-content-center">
        
        @* --- SOL TARAFI: FORM --- *@
        <div class="col-lg-5 mb-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0"><i class="bi bi-sliders"></i> Bilgilerinizi Girin</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="OneriAl" method="post" id="aiForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-6 mb-3">
                                <label asp-for="Kilo" class="form-label fw-bold">Kilo (kg)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-speedometer2"></i></span>
                                    <input asp-for="Kilo" class="form-control" type="number" placeholder="70" />
                                </div>
                                <span asp-validation-for="Kilo" class="text-danger small"></span>
                            </div>

                            <div class="col-6 mb-3">
                                <label asp-for="Boy" class="form-label fw-bold">Boy (cm)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-rulers"></i></span>
                                    <input asp-for="Boy" class="form-control" type="number" placeholder="175" />
                                </div>
                                <span asp-validation-for="Boy" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Hedef" class="form-label fw-bold">Hedefiniz Nedir?</label>
                            <textarea asp-for="Hedef" class="form-control" rows="3" placeholder="Örn: Yaza kadar karın kası yapmak..."></textarea>
                            <span asp-validation-for="Hedef" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg" id="btnSubmit">
                                <i class="bi bi-magic"></i> Planı Oluştur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @* --- SAĞ TARAFI: SONUÇ --- *@
        <div class="col-lg-7">
            
            @* Yükleniyor Animasyonu *@
            <div id="loadingSpinner" class="text-center d-none mt-5">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <h5 class="mt-3 text-muted animate__animated animate__pulse animate__infinite">Yapay Zeka planınızı hazırlıyor...</h5>
            </div>

            @* Sonuç Kartı *@
            @if (!string.IsNullOrEmpty(Model.OneriMetni))
            {
                <div class="card shadow-lg border-0 border-top border-4 border-success animate__animated animate__fadeInUp">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success text-white rounded-circle p-3 me-3 shadow-sm">
                                <i class="bi bi-check-lg fs-4"></i>
                            </div>
                            <div>
                                <h4 class="mb-0 fw-bold text-success">Size Özel Plan Hazır!</h4>
                                <small class="text-muted">Gemini AI tarafından oluşturuldu.</small>
                            </div>
                        </div>
                        
                        <hr class="my-4" />
                        
                        <div id="formattedContent" class="ai-content text-dark"></div>
                    </div>
                </div>
            }
            else if (ViewContext.ModelState.IsValid)
            {
                @* Boş Durum *@
                <div class="card border-0 bg-light text-center py-5 rounded-3" id="welcomeCard">
                    <div class="card-body">
                        <i class="bi bi-stars text-warning display-1"></i>
                        <h5 class="mt-3 text-muted">Sonuçlar burada görünecek</h5>
                        <p class="small text-secondary">Sol taraftan bilgilerinizi girip butona basın.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // 1. C# Verisini Güvenli Bir Şekilde JS'e Aktar
            // Json.Serialize metodu satır sonlarını ve özel karakterleri bozulmadan aktarır.
            var rawAiText = @Html.Raw(Json.Serialize(Model.OneriMetni));
            
            var targetDiv = document.getElementById("formattedContent");

            if (rawAiText && targetDiv) {
                try {
                    
                    
                    marked.use({
                        breaks: true,
                        gfm: true
                    });
                    
                    targetDiv.innerHTML = marked.parse(rawAiText);
                } catch (e) {
                    console.error("Markdown hatası:", e);
                    targetDiv.innerText = rawAiText; // Hata olursa düz metin göster
                }
            }
        });

        // Buton Animasyonu
        document.getElementById("aiForm").addEventListener("submit", function() {
            if ($(this).valid()) {
                var btn = document.getElementById("btnSubmit");
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> İşleniyor...';
                
                var welcome = document.getElementById("welcomeCard");
                if(welcome) welcome.style.display = 'none';
                
                document.getElementById("loadingSpinner").classList.remove("d-none");
            }
        });
    </script>

    <style>
        .ai-content {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.7;
        }
        
        .ai-content h1, .ai-content h2, .ai-content h3 {
            color: #198754; /* Yeşil ton */
            margin-top: 1.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
            border-bottom: 2px solid #e9ecef;
            padding-bottom: 0.5rem;
        }
        
        .ai-content strong {
            color: #0d6efd; /* Mavi ton */
            font-weight: 700;
        }
        
        .ai-content ul {
            padding-left: 1.2rem;
            list-style-type: none; 
        }
        .ai-content ul li {
            margin-bottom: 0.5rem;
            position: relative;
            padding-left: 1.5rem;
        }
        
        .ai-content ul li::before {
            content: "✓"; 
            color: #198754;
            font-weight: bold;
            position: absolute;
            left: 0;
        }
    </style>
}
@model OZ_SporSalonu.ViewModels.AntrenorViewModel

@{
    ViewData["Title"] = "Antrenör Düzenle";
}

<h2>Antrenör Düzenle</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-3">
                <label asp-for="AdSoyad" class="form-label"></label>
                <input asp-for="AdSoyad" class="form-control" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>
            <div class="mb-3">
    <label asp-for="SalonId" class="form-label">Çalıştığı Salon</label>
    <select asp-for="SalonId" class="form-select" asp-items="ViewBag.SalonListesi">
        <option value="">-- Salon Seçiniz --</option>
    </select>
</div>
            
<div class="mb-3">
    <label asp-for="UzmanlikAlani" class="form-label"></label>
    <select asp-for="UzmanlikAlani" class="form-select" asp-items="ViewBag.HizmetListesi">
        <option value="">-- Uzmanlık Seçiniz --</option>
    </select>
    <span asp-validation-for="UzmanlikAlani" class="text-danger"></span>
</div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model OZ_SporSalonu.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Yönetim Kokpiti";
}

<div class="container-fluid py-4">
    
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-dark mb-0">Yönetim Kokpiti</h2>
            <p class="text-muted small mb-0">Hoş geldin Admin, işte salonun güncel durumu.</p>
        </div>
        <div>
            <a asp-controller="Admin" asp-action="Randevular" class="btn btn-primary shadow-sm">
                <i class="bi bi-list-check me-2"></i> Tüm Talepler
            </a>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 overflow-hidden bg-white">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <div class="icon-shape bg-success bg-opacity-10 text-success rounded-3 p-2 me-3">
                            <i class="bi bi-graph-up-arrow fs-4"></i>
                        </div>
                        <span class="text-muted text-uppercase small fw-bold">Bu Ayki Ciro</span>
                    </div>
                    <h3 class="fw-bold text-dark mb-0">@Model.BuAykiCiro.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))</h3>
                    <small class="text-muted success-text"><i class="bi bi-wallet2"></i> Toplam: @Model.ToplamCiro.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))</small>
                </div>
                <div class="progress" style="height: 3px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 75%"></div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 overflow-hidden bg-white">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <div class="icon-shape bg-warning bg-opacity-10 text-warning rounded-3 p-2 me-3">
                            <i class="bi bi-hourglass-split fs-4"></i>
                        </div>
                        <span class="text-muted text-uppercase small fw-bold">Onay Bekleyen</span>
                    </div>
                    <h3 class="fw-bold text-dark mb-0">@Model.BekleyenRandevuSayisi</h3>
                    <small class="text-muted">Aksiyon almanız gerekiyor.</small>
                </div>
                <div class="progress" style="height: 3px;">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: @(Model.BekleyenRandevuSayisi > 0 ? "100" : "0")%"></div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 overflow-hidden bg-white">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded-3 p-2 me-3">
                            <i class="bi bi-people fs-4"></i>
                        </div>
                        <span class="text-muted text-uppercase small fw-bold">Aktif Üye</span>
                    </div>
                    <h3 class="fw-bold text-dark mb-0">@Model.ToplamUyeSayisi</h3>
                    <small class="text-muted">Salon kapasitesi doluluk oranı.</small>
                </div>
                <div class="progress" style="height: 3px;">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: 65%"></div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 overflow-hidden bg-white">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <div class="icon-shape bg-info bg-opacity-10 text-info rounded-3 p-2 me-3">
                            <i class="bi bi-calendar-day fs-4"></i>
                        </div>
                        <span class="text-muted text-uppercase small fw-bold">Bugün</span>
                    </div>
                    <h3 class="fw-bold text-dark mb-0">@Model.BugunkuRandevuSayisi</h3>
                    <small class="text-muted">Bugün gerçekleşecek seanslar.</small>
                </div>
                <div class="progress" style="height: 3px;">
                    <div class="progress-bar bg-info" role="progressbar" style="width: 40%"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0 text-danger"><i class="bi bi-exclamation-circle me-2"></i>Acil Onay Bekleyenler</h6>
                    <a asp-action="Randevular" class="btn btn-sm btn-light text-primary fw-bold">Tümünü Gör</a>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle table-hover mb-0">
                        <thead class="bg-light">
                            <tr class="text-muted small text-uppercase">
                                <th class="ps-4">Üye</th>
                                <th>Hizmet</th>
                                <th>Tarih</th>
                                <th class="text-end pe-4">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.BekleyenRandevular.Any())
                            {
                                @foreach (var item in Model.BekleyenRandevular)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold">@item.Uye?.Ad @item.Uye?.Soyad</td>
                                        <td><span class="badge bg-light text-dark border">@item.Hizmet?.Ad</span></td>
                                        <td>@item.RandevuBaslangic.ToString("dd.MM HH:mm")</td>
                                        <td class="text-end pe-4">
                                            <form asp-action="RandevuOnayla" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button class="btn btn-sm btn-success rounded-pill px-3"><i class="bi bi-check-lg"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="4" class="text-center py-4 text-muted">Bekleyen talep yok, harika!</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="fw-bold mb-0 text-dark"><i class="bi bi-calendar-week me-2"></i>Bugünün Programı</h6>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @if (Model.BugunkuRandevular.Any())
                        {
                            @foreach (var item in Model.BugunkuRandevular)
                            {
                                <li class="list-group-item px-4 py-3 border-0 border-bottom">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <div class="text-center me-3 border-end pe-3">
                                                <div class="fw-bold text-dark">@item.RandevuBaslangic.ToString("HH:mm")</div>
                                                <small class="text-muted">@item.RandevuBaslangic.AddMinutes(item.Hizmet.SureDakika).ToString("HH:mm")</small>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-bold">@item.Hizmet?.Ad</h6>
                                                <small class="text-muted"><i class="bi bi-person me-1"></i>@item.Uye?.Ad @item.Uye?.Soyad &bull; <i class="bi bi-person-badge ms-1"></i> @item.Antrenor?.AdSoyad</small>
                                            </div>
                                        </div>
                                        <span class="badge bg-primary bg-opacity-10 text-primary">@item.Hizmet?.SureDakika dk</span>
                                    </div>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item text-center py-4 text-muted border-0">Bugün için planlanmış ders yok.</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="fw-bold mb-0 text-dark">En Çok Tercih Edilenler</h6>
                </div>
                <div class="card-body">
                    @if (Model.PopulerHizmetler.Any())
                    {
                        var maxVal = Model.PopulerHizmetler.Values.Max(); // Oranlamak için max değer
                        @foreach (var item in Model.PopulerHizmetler)
                        {
                            var yuzde = (item.Value * 100) / maxVal;
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="text-dark fw-bold small">@item.Key</span>
                                    <span class="text-muted small">@item.Value Randevu</span>
                                </div>
                                <div class="progress" style="height: 6px;">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: @yuzde%"></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted small">Henüz veri yok.</p>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 bg-dark text-white">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Hızlı Erişim</h5>
                    <div class="d-grid gap-3">
                        <a asp-controller="Antrenor" asp-action="Create" class="btn btn-outline-light text-start border-0 bg-white bg-opacity-10">
                            <i class="bi bi-person-plus-fill me-2"></i> Yeni Eğitmen Ekle
                        </a>
                        <a asp-controller="Hizmet" asp-action="Create" class="btn btn-outline-light text-start border-0 bg-white bg-opacity-10">
                            <i class="bi bi-lightning-charge-fill me-2"></i> Yeni Hizmet Ekle
                        </a>
                        <a asp-controller="Salon" asp-action="Create" class="btn btn-outline-light text-start border-0 bg-white bg-opacity-10">
                            <i class="bi bi-building-add me-2"></i> Yeni Şube Aç
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
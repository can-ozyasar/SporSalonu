@model OZ_SporSalonu.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Yönetim Paneli</h2>
            <p class="text-muted small mb-0">Salon performans özeti ve hızlı işlemler.</p>
        </div>
        <div class="text-end">
            <span class="badge bg-white text-dark border px-3 py-2 rounded-pill shadow-sm">
                <i class="bi bi-calendar3 me-2 text-primary"></i> @DateTime.Now.ToString("dd MMMM yyyy")
            </span>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-uppercase text-muted small fw-bold mb-1">Tahmini Gelir</p>
                            <h3 class="fw-bold text-success mb-0">@Model.ToplamTahminiGelir.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 text-success rounded-3 p-3">
                            <i class="bi bi-wallet2 fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-uppercase text-muted small fw-bold mb-1">Toplam Üye</p>
                            <h3 class="fw-bold text-primary mb-0">@Model.ToplamUyeSayisi</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 text-primary rounded-3 p-3">
                            <i class="bi bi-people-fill fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-uppercase text-muted small fw-bold mb-1">Eğitmenler</p>
                            <h3 class="fw-bold text-info mb-0">@Model.ToplamAntrenorSayisi</h3>
                        </div>
                        <div class="bg-info bg-opacity-10 text-info rounded-3 p-3">
                            <i class="bi bi-person-badge-fill fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-uppercase text-muted small fw-bold mb-1">Bekleyen Talep</p>
                            <h3 class="fw-bold text-warning mb-0">@Model.BekleyenRandevuSayisi</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 text-warning rounded-3 p-3">
                            <i class="bi bi-hourglass-split fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="fw-bold mb-0 text-dark">Hızlı İşlemler</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-controller="Admin" asp-action="Randevular" class="btn btn-outline-primary text-start p-3 d-flex align-items-center justify-content-between rounded-3">
                            <span><i class="bi bi-list-check me-2"></i> Randevuları Yönet</span>
                            @if(Model.BekleyenRandevuSayisi > 0)
                            {
                                <span class="badge bg-danger rounded-pill">@Model.BekleyenRandevuSayisi Yeni</span>
                            }
                        </a>
                        <a asp-controller="Antrenor" asp-action="Create" class="btn btn-outline-dark text-start p-3 rounded-3">
                            <i class="bi bi-person-plus-fill me-2"></i> Yeni Eğitmen Ekle
                        </a>
                        <a asp-controller="Salon" asp-action="Create" class="btn btn-outline-dark text-start p-3 rounded-3">
                            <i class="bi bi-building-add me-2"></i> Yeni Şube Aç
                        </a>
                        <a asp-controller="Hizmet" asp-action="Create" class="btn btn-outline-dark text-start p-3 rounded-3">
                            <i class="bi bi-lightning-charge me-2"></i> Hizmet Tanımla
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0 text-dark">Son Aktiviteler</h6>
                    <a asp-controller="Admin" asp-action="Randevular" class="btn btn-sm btn-light text-primary fw-bold rounded-pill px-3">Tümünü Gör</a>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 text-muted small fw-bold border-0 py-3">Üye</th>
                                <th class="text-muted small fw-bold border-0 py-3">Hizmet</th>
                                <th class="text-muted small fw-bold border-0 py-3">Tarih</th>
                                <th class="text-muted small fw-bold border-0 py-3">Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.SonRandevular != null && Model.SonRandevular.Any())
                            {
                                @foreach (var item in Model.SonRandevular)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-secondary bg-opacity-10 text-secondary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                    <i class="bi bi-person-fill small"></i>
                                                </div>
                                                <span class="fw-bold text-dark small">@item.Uye?.Ad @item.Uye?.Soyad</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-muted small">@item.Hizmet?.Ad</span>
                                        </td>
                                        <td>
                                            <span class="text-dark fw-bold small">@item.RandevuBaslangic.ToString("dd.MM.yyyy")</span>
                                            <small class="text-muted ms-1">@item.RandevuBaslangic.ToString("HH:mm")</small>
                                        </td>
                                        <td>
                                            @if (item.Onaylandi)
                                            {
                                                <span class="badge bg-success bg-opacity-10 text-success rounded-pill">Onaylandı</span>
                                            }
                                            else if (!string.IsNullOrEmpty(item.RedMesaji))
                                            {
                                                <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">İptal</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill">Bekliyor</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted small">Henüz randevu kaydı bulunmamaktadır.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
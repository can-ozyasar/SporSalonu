@model IEnumerable<OZ_SporSalonu.Models.Randevu>
@{ ViewData["Title"] = "Randevu Talepleri"; }

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0 rounded-4 mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <h3 class="fw-bold text-dark mb-0"><i class="bi bi-calendar-check text-primary me-2"></i>Randevu Talepleri</h3>
                <p class="text-muted small mb-0">Bekleyen ve onaylanan tüm randevuların yönetimi.</p>
            </div>
            <span class="badge bg-primary fs-6 rounded-pill px-3">Toplam: @Model.Count()</span>
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table align-middle table-hover mb-0">
                <thead class="bg-light">
                    <tr class="text-uppercase small fw-bold text-muted">
                        <th class="ps-4 py-3">Tarih / Saat</th>
                        <th class="py-3">Üye Bilgisi</th>
                        <th class="py-3">Hizmet / Antrenör</th>
                        <th class="py-3">Durum</th>
                        <th class="text-end pe-4 py-3">Yönetim</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex flex-column">
                                    <span class="fw-bold text-dark">@item.RandevuBaslangic.ToString("dd MMM yyyy")</span>
                                    <span class="text-muted small"><i class="bi bi-clock me-1"></i>@item.RandevuBaslangic.ToString("HH:mm")</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="bi bi-person-fill fs-5"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@item.Uye?.Ad @item.Uye?.Soyad</div>
                                        <div class="text-muted small">@item.Uye?.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info bg-opacity-10 text-info border border-info mb-1">@item.Hizmet?.Ad</span>
                                <div class="small text-muted"><i class="bi bi-person-badge me-1"></i>@item.Antrenor?.AdSoyad</div>
                            </td>
                            <td>
                                @if(item.Onaylandi) 
                                { 
                                    <span class="badge bg-success-subtle text-success rounded-pill px-3 py-2"><i class="bi bi-check-circle-fill me-1"></i> ONAYLANDI</span> 
                                }
                                else if(!string.IsNullOrEmpty(item.RedMesaji))
                                {
                                    <span class="badge bg-danger-subtle text-danger rounded-pill px-3 py-2"><i class="bi bi-x-circle-fill me-1"></i> REDDEDİLDİ</span>
                                }
                                else 
                                { 
                                    <span class="badge bg-warning-subtle text-warning-emphasis rounded-pill px-3 py-2 animate__animated animate__pulse animate__infinite"><i class="bi bi-hourglass-split me-1"></i> BEKLİYOR</span> 
                                }
                            </td>
                            <td class="text-end pe-4">
                                @if (!item.Onaylandi && string.IsNullOrEmpty(item.RedMesaji))
                                {
                                    <div class="btn-group shadow-sm" role="group">
                                        <form asp-action="RandevuOnayla" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button class="btn btn-success btn-sm fw-bold" title="Onayla">
                                                <i class="bi bi-check-lg me-1"></i> Onayla
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-danger btn-sm fw-bold" data-bs-toggle="modal" data-bs-target="#redModal-@item.Id" title="Reddet">
                                            <i class="bi bi-x-lg me-1"></i> Red
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small fst-italic">İşlem Tamamlandı</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    @if (!item.Onaylandi && string.IsNullOrEmpty(item.RedMesaji))
    {
        <div class="modal fade" id="redModal-@item.Id" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg rounded-4">
                    <form asp-action="RandevuReddet" method="post">
                        <div class="modal-header bg-danger text-white border-0">
                            <h5 class="modal-title fw-bold"><i class="bi bi-exclamation-triangle-fill me-2"></i> Randevuyu Reddet</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body p-4">
                            <p class="text-muted mb-3">Bu randevuyu iptal etmek üzeresiniz. Üyeye iletilecek iptal sebebini aşağıya yazınız.</p>
                            <input type="hidden" name="id" value="@item.Id" />
                            <div class="form-floating">
                                <textarea name="redMesaji" class="form-control border-danger" style="height: 120px" placeholder="Sebep" required></textarea>
                                <label>İptal Sebebi</label>
                            </div>
                        </div>
                        <div class="modal-footer bg-light border-0 rounded-bottom-4">
                            <button type="button" class="btn btn-light text-muted fw-bold" data-bs-dismiss="modal">Vazgeç</button>
                            <button type="submit" class="btn btn-danger fw-bold px-4">İptal Et</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}

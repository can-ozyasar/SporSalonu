@model OZ_SporSalonu.ViewModels.RandevuAlViewModel
@using OZ_SporSalonu.Models 

@{
    ViewData["Title"] = "Randevu Oluştur";
    var antrenorListesi = ViewBag.AntrenorListesi as IEnumerable<Antrenor>;
}

@functions {
    string GunTurkce(DayOfWeek gun) {
        return gun switch {
            DayOfWeek.Monday => "Pazartesi", DayOfWeek.Tuesday => "Salı", DayOfWeek.Wednesday => "Çarşamba",
            DayOfWeek.Thursday => "Perşembe", DayOfWeek.Friday => "Cuma", DayOfWeek.Saturday => "Cumartesi",
            DayOfWeek.Sunday => "Pazar", _ => ""
        };
    }
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden animate__animated animate__fadeInUp">
                
                <div class="card-header bg-white border-0 pt-5 pb-0 text-center position-relative">
                    <div class="mb-3">
                        <span class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="bi bi-calendar2-check-fill display-5"></i>
                        </span>
                    </div>
                    <h2 class="fw-bold text-dark">Randevu Oluştur</h2>
                    <p class="text-muted">Size en uygun programı ve eğitmeni seçerek hemen başlayın.</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Al" method="post">
                        
                        <div asp-validation-summary="All" class="alert alert-danger border-0 shadow-sm rounded-3 mb-4 small" style="display:none;"></div>

                        <div class="step-card mb-4 position-relative">
                            <div class="d-flex align-items-center mb-2">
                                <div class="step-number me-3">1</div>
                                <label class="form-label fw-bold text-dark mb-0">Hangi derse katılmak istersiniz?</label>
                            </div>
                            <div class="ps-5">
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-primary"><i class="bi bi-lightning-charge-fill"></i></span>
                                    <select asp-for="HizmetId" class="form-select bg-light border-start-0" asp-items="@Model.HizmetListesi" id="hizmetSelect">
                                        <option value="">-- Hizmet Seçiniz --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="HizmetId" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="step-card mb-4 position-relative">
                            <div class="d-flex align-items-center mb-2">
                                <div class="step-number me-3">2</div>
                                <label class="form-label fw-bold text-dark mb-0">Eğitmeninizi seçin</label>
                            </div>
                            <div class="ps-5">
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-primary"><i class="bi bi-person-badge-fill"></i></span>
                                    <select asp-for="AntrenorId" class="form-select bg-light border-start-0" id="antrenorSelect" disabled>
                                         <option value="">-- Önce Hizmet Seçiniz --</option>
                                         @if (antrenorListesi != null)
                                         {
                                             @foreach (var antrenor in antrenorListesi)
                                             {
                                                 var hizmetIds = string.Join(",", antrenor.AntrenorHizmetleri.Select(ah => ah.HizmetId));
                                                 var salonAdi = antrenor.Salon != null ? antrenor.Salon.Ad : "Belirtilmemiş";
                                                 
                                                 
                                                 var musaitlikBilgisi = "";
                                                 if(antrenor.Musaitlikler != null && antrenor.Musaitlikler.Any())
                                                 {
                                                     musaitlikBilgisi = "<ul class='list-unstyled mb-0 small'>";
                                                     foreach(var m in antrenor.Musaitlikler.OrderBy(x => x.Gun))
                                                     {
                                                         musaitlikBilgisi += $"<li class='mb-1'><i class='bi bi-clock me-2 opacity-50'></i><strong class='text-white'>{GunTurkce(m.Gun)}:</strong> {m.BaslangicSaati:hh\\:mm} - {m.BitisSaati:hh\\:mm}</li>";
                                                     }
                                                     musaitlikBilgisi += "</ul>";
                                                 }
                                                 else { musaitlikBilgisi = "<i class='small opacity-75'>Çalışma saati girilmemiş.</i>"; }

                                                 <option value="@antrenor.Id" 
                                                         data-hizmetler="@hizmetIds" 
                                                         data-salon="@salonAdi"
                                                         data-info="@musaitlikBilgisi">
                                                     @antrenor.AdSoyad (@salonAdi)
                                                 </option>
                                             }
                                         }
                                    </select>
                                </div>
                                <span asp-validation-for="AntrenorId" class="text-danger small mt-1 d-block"></span>

                                <div id="antrenorInfoCard" class="card mt-3 border-0 bg-primary text-white shadow-sm d-none animate__animated animate__fadeIn">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-start">
                                            <div class="bg-white bg-opacity-25 rounded-circle p-2 me-3">
                                                <i class="bi bi-info-lg text-white"></i>
                                            </div>
                                            <div class="w-100">
                                                <h6 class="fw-bold mb-1">Eğitmen Detayları</h6>
                                                <div class="badge bg-white text-primary mb-2"><i class="bi bi-geo-alt-fill me-1"></i> <span id="infoSalon"></span></div>
                                                <div class="border-top border-white border-opacity-25 my-2"></div>
                                                <div id="infoSaatler"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="step-card mb-5 position-relative">
                            <div class="d-flex align-items-center mb-2">
                                <div class="step-number me-3">3</div>
                                <label class="form-label fw-bold text-dark mb-0">Tarih ve Saat</label>
                            </div>
                            <div class="ps-5">
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-primary"><i class="bi bi-calendar-date-fill"></i></span>
                                    <input asp-for="RandevuBaslangic" 
                                           class="form-control bg-light border-start-0" 
                                           type="datetime-local"
                                           value="@DateTime.Now.AddHours(1).ToString("yyyy-MM-ddTHH:mm")"
                                           min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                                </div>
                                <span asp-validation-for="RandevuBaslangic" class="text-danger small mt-1 d-block"></span>
                                <div class="form-text small"><i class="bi bi-info-circle me-1"></i> Lütfen eğitmenin çalışma saatlerine uygun bir zaman seçiniz.</div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm">
                                <i class="bi bi-check-circle-fill me-2"></i> Randevuyu Onayla
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-light text-muted">Vazgeç</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .step-number {
        width: 35px;
        height: 35px;
        background-color: var(--bs-primary);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.1rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    .step-card {
        transition: all 0.3s ease;
    }
    .step-card:hover .step-number {
        transform: scale(1.1);
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var hizmetSelect = document.getElementById("hizmetSelect");
            var antrenorSelect = document.getElementById("antrenorSelect");
            var infoCard = document.getElementById("antrenorInfoCard");
            var infoSalon = document.getElementById("infoSalon");
            var infoSaatler = document.getElementById("infoSaatler");
            
            var options = antrenorSelect.querySelectorAll("option");

            
            function antrenorleriFiltrele(secimiSifirla) {
                var secilenHizmetId = hizmetSelect.value;

                if (!secilenHizmetId) {
                    antrenorSelect.disabled = true;
                    if(secimiSifirla) {
                        antrenorSelect.value = "";
                        bilgiKartiniGizle();
                    }
                    return;
                }

                antrenorSelect.disabled = false;
                
                var enAzBirTaneVar = false;
                options.forEach(function(option) {
                    if (option.value === "") return;

                    var hizmetler = option.getAttribute("data-hizmetler");
                    
                    if (hizmetler && hizmetler.split(",").includes(secilenHizmetId)) {
                        option.style.display = "block";
                        enAzBirTaneVar = true;
                    } else {
                        option.style.display = "none";
                    }
                });
                
                if (secimiSifirla) {
                    antrenorSelect.value = "";
                    bilgiKartiniGizle();
                }
            }

            
            function antrenorBilgisiGoster() {
                var secilenOption = antrenorSelect.options[antrenorSelect.selectedIndex];
                
                if (secilenOption && secilenOption.value !== "") {
                    var salon = secilenOption.getAttribute("data-salon");
                    var saatler = secilenOption.getAttribute("data-info");

                    infoSalon.textContent = salon;
                    infoSaatler.innerHTML = saatler; 
                    
                    infoCard.classList.remove("d-none");
                } else {
                    bilgiKartiniGizle();
                }
            }

            function bilgiKartiniGizle() {
                infoCard.classList.add("d-none");
            }

            
            hizmetSelect.addEventListener("change", function() {
                antrenorleriFiltrele(true);
            });

            antrenorSelect.addEventListener("change", function() {
                antrenorBilgisiGoster();
            });

            if (hizmetSelect.value) {
                antrenorleriFiltrele(false);
                if (antrenorSelect.value) {
                    antrenorBilgisiGoster();
                }
            }
        });
    </script>
}
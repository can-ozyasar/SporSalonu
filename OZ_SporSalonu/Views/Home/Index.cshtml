@{
    ViewData["Title"] = "Ana Sayfa";
}

@if (User.IsInRole("Admin")) 
//admin arayüzü
{
   
    <div class="container py-5 mt-4">
        <div class="bg-primary bg-opacity-10 rounded-5 p-5 mb-5 position-relative overflow-hidden">
            <div class="row align-items-center position-relative z-1">
                <div class="col-lg-8 animate__animated animate__fadeInLeft">
                    <span class="badge bg-primary text-white mb-3 px-3 py-2 rounded-pill">Yönetici Modu</span>
                    <h1 class="display-4 fw-bold text-dark mb-3">Hoş Geldiniz, Admin.</h1>
                    <p class="lead text-muted mb-4">
                        Salon yönetim paneline hızlı erişim sağlayın. Bekleyen randevuları kontrol edin veya istatistiklere göz atın.
                    </p>
                    <div class="d-flex gap-3">
                        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-speedometer2 me-2"></i> Dashboard'a Git
                        </a>
                        <a asp-controller="Admin" asp-action="Randevular" class="btn btn-outline-dark btn-lg">
                            <i class="bi bi-list-check me-2"></i> Talepleri İncele
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 text-center d-none d-lg-block animate__animated animate__fadeInRight">
                    <i class="bi bi-shield-check display-1 text-primary opacity-50" style="font-size: 10rem;"></i>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 p-3 hover-scale">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success bg-opacity-10 text-success rounded-3 p-3 me-3">
                                <i class="bi bi-person-plus-fill fs-4"></i>
                            </div>
                            <h5 class="fw-bold mb-0">Eğitmen Ekle</h5>
                        </div>
                        <p class="text-muted small">Kadroya yeni bir antrenör dahil edin ve uzmanlık atayın.</p>
                        <a asp-controller="Antrenor" asp-action="Create" class="btn btn-sm btn-light text-success fw-bold w-100 stretched-link">İşlemi Başlat <i class="bi bi-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 p-3 hover-scale">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-info bg-opacity-10 text-info rounded-3 p-3 me-3">
                                <i class="bi bi-lightning-charge-fill fs-4"></i>
                            </div>
                            <h5 class="fw-bold mb-0">Hizmet Tanımla</h5>
                        </div>
                        <p class="text-muted small">Yeni bir ders, kurs veya paket programı sisteme ekleyin.</p>
                        <a asp-controller="Hizmet" asp-action="Create" class="btn btn-sm btn-light text-info fw-bold w-100 stretched-link">İşlemi Başlat <i class="bi bi-arrow-right"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 p-3 hover-scale">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-warning bg-opacity-10 text-warning rounded-3 p-3 me-3">
                                <i class="bi bi-building-add fs-4"></i>
                            </div>
                            <h5 class="fw-bold mb-0">Şube Yönetimi</h5>
                        </div>
                        <p class="text-muted small">Yeni bir şube açın veya mevcut şubelerin bilgilerini düzenleyin.</p>
                        <a asp-controller="Salon" asp-action="Index" class="btn btn-sm btn-light text-warning fw-bold w-100 stretched-link">Listeye Git <i class="bi bi-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    // uye arayüzü
    
    <section class="container py-5 mt-lg-5 mb-5">
        <div class="row align-items-center g-5">
            <div class="col-lg-6 animate__animated animate__fadeInLeft">
                <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill fw-bold mb-3 border border-success border-opacity-25">
                    <i class="bi bi-stars"></i> Yapay Zeka Destekli Fitness
                </span>
                <h1 class="display-3 fw-bold mb-3 text-dark lh-sm">
                    Hayatına <span class="text-primary">Hareket</span> ve Sağlık Kat.
                </h1>
                <p class="lead text-muted mb-4">
                    OZ Wellness Club ile kişiselleştirilmiş antrenman programları, AI destekli beslenme önerileri ve uzman eğitmenler bir arada.
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg shadow-sm text-white">
                            Ücretsiz Başla <i class="bi bi-arrow-right ms-2"></i>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Randevu" asp-action="Al" class="btn btn-success btn-lg shadow-sm text-white">
                            Randevu Al <i class="bi bi-calendar-check ms-2"></i>
                        </a>
                        <a asp-controller="YapayZeka" asp-action="OneriAl" class="btn btn-outline-dark btn-lg">
                            AI Koç <i class="bi bi-robot ms-2"></i>
                        </a>
                    }
                </div>
                
                <div class="d-flex gap-5 mt-5 pt-4 border-top">
                    <div>
                        <h3 class="fw-bold mb-0 text-dark">50+</h3>
                        <small class="text-muted">Eğitmen</small>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0 text-dark">12</h3>
                        <small class="text-muted">Şube</small>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0 text-dark">2k+</h3>
                        <small class="text-muted">Mutlu Üye</small>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6 animate__animated animate__fadeInRight">
                <div class="position-relative">
                    <img src="https://images.unsplash.com/photo-1571019614242-c5c5dee9f50b?q=80&w=1470&auto=format&fit=crop" 
                         class="img-fluid rounded-5 shadow-lg" alt="Fitness Lifestyle">
                    
                    <div class="position-absolute bottom-0 start-0 bg-white p-3 rounded-4 shadow-lg m-4 d-none d-md-block animate__animated animate__bounceIn" style="animation-delay: 1s;">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                <i class="bi bi-check-lg fs-4"></i>
                            </div>
                            <div>
                                <div class="fw-bold text-dark">Bugünkü Hedef</div>
                                <small class="text-muted">Tamamlandı: 500 kcal</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5 mb-5 bg-white">
        <div class="container">
            <div class="text-center mb-5 mw-md mx-auto" style="max-width: 700px;">
                <h6 class="text-uppercase text-primary fw-bold letter-spacing-2">NEDEN BİZ?</h6>
                <h2 class="fw-bold text-dark display-6">İhtiyacına Uygun Çözümler</h2>
                <p class="text-muted">Sadece spor değil, bütünsel bir sağlık deneyimi sunuyoruz.</p>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 p-4 text-center bg-light border-0">
                        <div class="card-body">
                            <div class="bg-white rounded-circle shadow-sm d-inline-flex p-3 mb-3 text-primary">
                                <i class="bi bi-people-fill fs-3"></i>
                            </div>
                            <h4 class="fw-bold text-dark mb-3">Uzman Eğitmenler</h4>
                            <p class="text-muted">Alanında sertifikalı, tecrübeli antrenörlerle birebir çalışma imkanı ve özel dersler.</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card h-100 p-4 text-center border-primary border-bottom border-4 bg-white shadow-sm">
                        <div class="card-body">
                            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3 text-success">
                                <i class="bi bi-cpu-fill fs-3"></i>
                            </div>
                            <h4 class="fw-bold text-dark mb-3">Gemini AI Desteği</h4>
                            <p class="text-muted">Vücut tipine ve hedeflerine göre yapay zeka destekli kişiselleştirilmiş programlar.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 p-4 text-center bg-light border-0">
                        <div class="card-body">
                            <div class="bg-white rounded-circle shadow-sm d-inline-flex p-3 mb-3 text-warning">
                                <i class="bi bi-calendar-check-fill fs-3"></i>
                            </div>
                            <h4 class="fw-bold text-dark mb-3">Kolay Randevu</h4>
                            <p class="text-muted">İstediğin saatte, istediğin şubeden ve hocadan saniyeler içinde online randevu al.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<style>

    .hover-scale {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .hover-scale:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>
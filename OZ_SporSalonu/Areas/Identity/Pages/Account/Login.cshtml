@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
            <div class="card rounded-3 text-black shadow-lg border-0 overflow-hidden">
                <div class="row g-0">
                    
                    <div class="col-lg-6 d-none d-lg-block" 
                         style="background-image: url('https://images.unsplash.com/photo-1517836357463-d25dfeac3438?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80'); 
                                background-size: cover; background-position: center;">
                        <div class="d-flex flex-column justify-content-center h-100 p-5 text-white" style="background: rgba(0,0,0,0.4);">
                            <h2 class="display-5 fw-bold">Tekrar Hoş Geldin!</h2>
                            <p class="lead">Hedeflerine ulaşmak için kaldığın yerden devam et.</p>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="card-body p-md-5 mx-md-4">

                            <div class="text-center mb-4">
                                <h3 class="mt-1 mb-2 pb-1 fw-bold text-primary">OZ Spor Salonu</h3>
                                <p class="text-muted">Hesabınıza giriş yapın</p>
                            </div>

                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email" class="form-label"><i class="bi bi-envelope"></i> Email Adresi</label>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password" class="form-label"><i class="bi bi-lock"></i> Şifre</label>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                                            Beni Hatırla
                                        </label>
                                    </div>
                                </div>

                                <div class="d-grid gap-2 mb-4">
                                    <button id="login-submit" type="submit" class="btn btn-primary btn-lg py-3 fw-bold">Giriş Yap</button>
                                </div>

                                <div class="d-flex align-items-center justify-content-center pb-4">
                                    <p class="mb-0 me-2">Hesabın yok mu?</p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-danger">Hemen Kayıt Ol</a>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}